/* 底栏 */
.footer {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    background: #ffffff;
    display: flex;
    align-items: center;
    border-top: 1rpx solid #eeeeee;
    padding: 20rpx;
    box-sizing: border-box;
}
.footer .comment_input {
    display: flex;
    width: 50%;
    align-items: center;
    border-radius: 100rpx;
    background-color: #f5f5f5;
    padding: 0 20rpx;
    height: 70rpx;
}
.footer .comment_input .image{
    width: 32rpx;
}
.footer .comment_input .input {
    height: 70rpx;
    margin-left: 10rpx;
    flex: 1;
    font-size: 28rpx;
}
.footer .icons {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: space-around;
    position: relative;
    top: 6rpx;
    left: 6rpx;
}
.footer .icons {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: space-around;
    position: relative;
    top: 6rpx;
    left: 6rpx;
}
.footer .icons view{
    position: relative;
}
.footer .icons .textT{
    font-size: 20rpx;
    position: absolute;
    background-color: #3994FF;
    padding: 2rpx 8rpx;
    border-radius: 5rpx;
    word-break: keep-all;
    color: #fff;
    top: -30rpx;
    right: -20rpx;
}
.footer .icons .image {
    width: 36rpx;
    height: 36rpx;
    display: inline-block;
    position: relative;
