/* components/goodscanvas/goodscanvas.wxss */
.share {
	position: fixed;
	left: 0;
	top: 0;
	background-color: rgba(0, 0, 0, 0.582);
	width: 100%;
	height: 100%;
	z-index: 1000;
}

.share .share_box {
	height: 960rpx;
	width: 540rpx;
	position: absolute;
	left: 50%;
	top: 45%;
	background-color: #999;
  transform: translate(-50%, -50%);
  display: flex;
  align-items: center;
  flex-direction: column;
}
.share .share_box .images {
  top: 0;
  left: 0;
	height: 100%;
	width: 100%;
  position: absolute;
}
.share .share_box view{
  z-index: 120;
}
.shop_title {
  display: flex;
  margin-top: 160rpx;
	width: 400rpx;
	height: 64rpx;
	opacity: 1;
	background: #ffffff;
	border: 2rpx solid #4dc4ff;
  border-radius: 10rpx;
  align-items: center;
}
.shop_title .text{
  width: 304rpx;
height: 52rpx;
opacity: 1;
font-size: 20rpx;
font-weight: 700;
text-align: left;
color: #333333;
line-height: 24rpx;
}
.shop_img{
  margin-top: 20rpx;
  border-radius: 10rpx;
  overflow: hidden;
  position: relative;
  width: 200px;
  height: 200px;
}
.shop_img image{
  width: 100%;
}
.user_info{
  width: 90px;
  overflow: hidden;
  position: absolute;
  bottom: 18rpx;
  left: 18rpx;
  display: flex;
}
.user_info .text{
  line-height: 40rpx;
  opacity: 1;
  font-size: 18rpx;
  color: #ffffff;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}
.prive_box{
  display: flex;
  flex-wrap: nowrap;
  align-items:flex-end;
  margin-top: 20rpx;
  
}

.prive_box .price_new{
  height: 36rpx;
  font-size: 40rpx;
  font-weight: 700;
  color: #ff7800;
  line-height: 34rpx;
  margin-right: 10rpx;
}
.prive_box .price_used{
  margin-right: 20rpx;

 width: 68rpx;
height: 34rpx;
font-size: 24rpx;
text-decoration:  line-through;
color: #aaaaaa;
}

.price_boon{
opacity: 1;
background: linear-gradient(90deg,#ff843e, #ff4848);
border-radius: 4rpx;
font-size: 20rpx;
font-weight: 400;
text-align: left;
color: #ffffff;
padding: 3rpx 10rpx;
line-height: 34rpx;
}

.share_box .title{
  width: 400rpx;
height: 72rpx;
opacity: 1;
font-size: 28rpx;
  margin-top: 20rpx;
  font-weight: 700;
text-align: center;
color: #333333;
line-height: 32rpx;
letter-spacing: -2rpx;
}

.QT_box{
  position: absolute;
  right: 36rpx;
  bottom: 36rpx;
  width: 112rpx;
  height: 112rpx;
  opacity: 1;
  background: #ffffff;
  box-shadow: 0px 0px 10rpx 0px rgba(0,0,0,0.16); 
}
.QT{
  margin: 10rpx;
  width: 92rpx !important;
  height: 92rpx !important;
}
.sharebtn{
	width: 100%;
	height: 100%;
	position: absolute;
	top: 0;
	left: 0%;
	opacity: 0;
}
.btn_share{
  position: absolute;
  bottom: 5%;
  left: 100rpx;
  width: 240rpx;
  height: 76rpx;
  opacity: 1;
  background: #4dc4ff;
  border-radius: 38rpx;
  display: flex;
  justify-content: center;
  align-items: center;
font-size: 16px;
color: #ffffff;
}
.btn_save{
  position: absolute;
  bottom: 5%;
  right: 100rpx;
  width: 240rpx;
height: 76rpx;  
  opacity: 1;
  background: #3994ff;
  border-radius: 38rpx;
  display: flex;
