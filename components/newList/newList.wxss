/* 资讯 */
.news_list {
    background-color: #ffffff;
}
.news_item {
    border-bottom: 1rpx solid #eeeeee;
    padding: 20rpx;
    box-sizing: border-box;
}
.news_item:last-child {
    border: none;
}
.news_video .title {
    font-weight: 400;
    color: #333333;
    font-size: 28rpx;
    line-height: 1.6;
    margin-bottom: 10rpx;
    display: -webkit-box;
    overflow: hidden;
    width: 720rpx;
    text-overflow: ellipsis;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}
.news_video .video_cover {
    height: 310rpx;
    position: relative;
}
.news_video .video_cover .cover {
    width: 100%;
    height: 310rpx;
    display: block;
    border-radius: 10rpx;
}
.news_video .video_cover .player {
    position: absolute;
    width: 80rpx;
    height: 80rpx;
    left: 0;
    right: 0;
    margin: 0 auto;
    top: 115rpx;
}
.news_video .video {
    width: 100%;
    height: 310rpx;
    border-radius: 10px;
}
.news_video .info {
    margin-top: 10rpx;
    font-size: 24rpx;
    color: #999999;
    position: relative;
    display: flex;
    justify-content: space-between;
}
.news_video .info view {
    display: flex;
}
.news_video .info view text {
    margin-right: 20rpx;
}
.news_video .info text {
    max-width: 200rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    text-overflow: ellipsis;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
}
.commenttext {
    position: absolute;
    right: 0;
}
.news_img {
    display: flex;
}
.news_img .cover {
    width: 25vw;
    height: 20vw;
    display: block;
    margin-right: 20rpx;
    border-radius: 6px;
}
.news_img .info {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 20vw;
}
.news_img .info .title {
    font-weight: 400;
    font-size: 28rpx;
    color: #333333;
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    width: 100%;
}
.news_img .info .other_info {
    font-size: 24rpx;
    color: #999999;
}
.news_img .info .other_info text {
    margin-right: 20rpx;
    display: inline-block;
    max-width: 150rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

