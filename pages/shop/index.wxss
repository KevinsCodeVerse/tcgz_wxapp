.navbar {
  display: flex;
  align-items: center;
  padding-left: 20rpx;
  font-size: 28rpx;
  color: #ffffff;
}
.navbar .addr {
  height: 30rpx;
}
.navbar .arrow {
  height: 8rpx;
  margin-left: 10rpx;
}
.navbar text {
  margin-left: 10rpx;
  display: block;
  max-width: 50%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
/* header */
.header {
  position: fixed;
  width: 100%;
  background-color: #3994FF;
  padding: 0 3vw;
  box-sizing: border-box;
  color: #ffffff;
  left: 0;
  z-index: 992;
}
.header .tabs {
  height: 88rpx;
  display: flex;
  justify-content: space-around;
}
.header .tabs .tab_item {
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  position: relative;
}
.header .tabs .active::after {
  content: '';
  position: absolute;
  bottom: 6rpx;
  width: 40rpx;
  height: 8rpx;
  background-color: #ffffff;
  border-radius: 50px;
  left: 0;
  right: 0;
  margin: 0 auto;
}
.header .van-search {
  padding: 0 !important;
}
/* banner */
.banner {
  width: 100%;
  position: relative;
  padding-top: 40rpx;
  margin-top: -20rpx;
}
.banner .banner_bgd {
  width: 100%;
  background: #3994FF;
  height: 220rpx;
  border-radius: 0 0 30px 30px;
  position: absolute;
  z-index: 0;
  left: 0;
  top: 0;
}
.banner swiper {
  width: 94%;
  margin: 0 auto;
}
.banner swiper image {
  width: 100%;
  height: 100%;
  border-radius: 15px;
}
/* 分类 */
.classify_box {
  padding: 0 3vw;
  box-sizing: border-box;
  position: relative;
  background: #f7f7f7;
}
.classify{
  width: 85%;
}
.classify .classify_list {
  display: -webkit-box;
  margin-right: 50rpx;
  padding-right: 50rpx;
}
.classify .classify_list .classify_item {
  display: block;
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  transition: 0.2s;
}
/* .classify .classify_list .classify_item:last-child {
  border-right: 110rpx solid transparent;
} */
.classify .classify_list .active {
  transform: scale(1.3);
}
.classify_box .shadow {
  position: absolute;
  right: calc(110rpx + 3vw);
  top: 0;
  height: 88rpx;
  width: 29.3rpx;
}
.classify_box .more {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  position: absolute;
  right: 3vw;
  top: 0;
  width: 110rpx;
  height: 88rpx;
  background-color: #f7f7f7;
  font-size: 28rpx;
}
.classify_box .more image {
  height: 28rpx;
  width: 28rpx;
  margin-right: 14rpx;
}
/* 店铺列表 */
.shop_list {
  width: 94%;
  margin: 0 auto;
}
.shop_item {
  background: #ffffff;
  border-radius: 10px;
  display: flex;
  padding: 20rpx;
  box-sizing: border-box;
  box-shadow: 0 0 3px 3px rgba(0, 0, 0, 0.03);
  margin-bottom: 20rpx;
}
.shop_item .shop_avatar {
  width: 117.6rpx;
  height: 117.6rpx;
  display: block;
  border-radius: 10px;
  margin-bottom: 8rpx;
}
.shop_item .activity_label {
  position: relative;
  width: 117.6rpx;
}
.shop_item .activity_label image {
  width: 117.6rpx;
  height: 40rpx;
}
.shop_item .activity_label text {
  position: absolute;
  top: 0;
  left: 0;
  font-size: 22rpx;
  width: 100%;
  text-align: center;
  height: 40rpx;
  line-height: 40rpx;
  color: #FF6040;
}
.shop_item .item_right {
  width: calc(100% - 137rpx);
  margin-left: 20rpx;
}
.shop_item .title {
  word-wrap: break-word;
  font-weight: bold;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  font-size: 32rpx;
}
.shop_item .shop_info {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999999;
}
.shop_item .shop_info .score {
  color: #FF7800;
  margin-right: 10rpx;
}
.shop_item .shop_info .score image {
  width: 22rpx;
  height: 22rpx;
}
.shop_item .shop_info .distance {
  padding: 4rpx 0;
}
.shop_item .shop_info .minus {
  display: block;
  background: #FFF2E6;
  color: #FF7800;
  padding: 4rpx 10rpx;
  margin-left: 10rpx;
}
.shop_item .address {
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #999999;
  font-size: 24rpx;
}
.shop_item .discount .discount_item {
  display: flex;
  align-items: center;
  margin-top: 10rpx;
}
.shop_item .discount .discount_item image {
  min-width: 36rpx;
  width: 36rpx;
  height: 36rpx;
  margin-right: 10rpx;
}
.shop_item .discount .discount_item text {
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #999999;
  font-size: 28rpx;
}
/* 入驻广告 */
.advert{
  bottom: 16%;
}
/* 滑动加载 */
.loading {
  text-align: center;
  padding: 30rpx 0;
}
.finish {
  font-size: 28rpx;
  color: #999999;
  padding-bottom: 20rpx;
}
.floor{
  padding: 0 20rpx;
}

 .more {
  /* color: #FF3333; */
  vertical-align: middle;
  font-size: 24rpx;
}
 .more image {
  height: 16rpx;
  margin-left: 5rpx;
}
/* 加载更多标题 */
.more_box{
  width: 100%;
  z-index: 5100;
  display: flex;
  flex-wrap: wrap;
}
.more_box .titleitem_box{
  flex: 0 0 29%;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  line-height: 60rpx;
  margin:15rpx 15rpx;
  text-align: center;
  background-color: #fff;
  border-radius: 10rpx;
}
.more_box .active{
  border: 1px solid #5ba2ff;
  background-color: #f2f8ff;
  color: #5ba2ff;
}