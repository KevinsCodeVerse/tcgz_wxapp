/* pages/shop/detail/detail.wxss */
.bannimg {
	position: relative;
}
.bannimg image {
	display: block;
	width: 100%;
	height: 400rpx;
}
.bannimg::before {
	content: "";
	position: absolute;
	left: 0;
	right: 0;
	bottom: 0;
	z-index: 10;
	height: 120rpx;
	background: linear-gradient(180deg, rgba(245, 245, 245, 0) 0%, #f5f5f5 100%);
}
.tesu {
	position: relative;
	height: 420rpx;
}
.info {
	margin: 0 30rpx;
	background-color: #fff;
	position: absolute;
	left: 0;
	right: 0;
	top: -120rpx;
	z-index: 20;
	border-radius: 10rpx;
	box-shadow: 0 0 14rpx rgba(0, 0, 0, 0.14);
}
.info .name {
	display: flex;
	align-items: center;
	justify-content: space-between;
	font-size: 40rpx;
	font-weight: bold;
	padding: 36rpx 36rpx;
}
.info .name view {
	width: calc(100% - 146rpx);
}
.info .avatar {
	height: 120rpx;
	width: 120rpx;
	border-radius: 50%;
}
.info .titlename{
	word-wrap:break-word;
}
.info .iolist {
	display: flex;
	align-items: center;
	font-size: 20rpx;
	text-align: center;
	color: #666;
	margin: 0 26rpx;
	border-bottom: 1px solid #f1f1f1;
	padding-bottom: 40rpx;
}
.info .iolist .iocard {
	width: 25%;
}
.info .iolist .tesubtn {
	background-color: #fff;
	height: 48rpx;
	line-height: normal;
	display: inline-block;
}
.info .iolist image {
	width: 48rpx;
	height: 48rpx;
}

/* ----------------------联系-------------------------- */
.contact {
	display: flex;
	justify-content: space-between;
	align-items: center;
	font-size: 24rpx;
	color: #999;
	padding: 24rpx 24rpx;
	height: 160rpx;
}
.contact .phone {
	width: calc(100% - 160rpx);
}
.contact .address {
	display: flex;
	margin-bottom: 6rpx;
}
.contact .address > text:first-child {
	width: 60rpx;
}
.contact .address .addre {
	width: calc(100% - 60rpx);
	overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
}
.contact .cobtn {
	width: 126rpx;
	height: 52rpx;
	border: 1px solid #3994ff;
	border-radius: 52rpx;
	color: #3994ff;
	display: flex;
	align-items: center;
	justify-content: center;
	margin: 14rpx 0;
}
.contact .cobtn image {
	width: 24rpx;
	height: 24rpx;
	margin-right: 10rpx;
}
.contact .cobtn2 {
	border-color: #ff6040;
	color: #ff6040;
}
/* 覆盖vant */
.mytabs {
	background-color: #f5f5f5;
}
.van-ellipsis {
	font-size: 32rpx;
	font-weight: bold;
}
.van-tabs--line .van-tabs__wrap {
	height: 108rpx !important;
}
.van-tab {
	line-height: 108rpx !important;
}
/* 简介 */
.intro {
	font-size: 26rpx;
	padding: 30rpx;
	line-height: 52rpx;
	background-color: #fff;
	margin: 30rpx;
	border-radius: 10rpx;
}
.intro .graphic {
	max-width: 100%;
}
/* --------------------------------优惠券列表--------------------------------------------- */
.cncard {
	background-color: #fff;
	border-radius: 20rpx;
	padding: 20rpx;
	display: flex;
	align-items: center;
	margin-bottom: 20rpx;
}
.cncard .price {
	background-color: #fff4f2;
	color: #ff0000;
	width: 22vw;
	height: 22vw;
	display: flex;
	align-items: center;
	justify-content: center;
	font-size: 70rpx;
	font-weight: bold;
	border-radius: 12rpx;
}
.cncard .cninfo {
	width: calc(100% - 22vw);
	height: 22vw;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
	padding-left: 20rpx;
	box-sizing: border-box;
}
.cncard .money {
	font-weight: bold;
	display: flex;
	align-items: center;
}
.cncard .meet {
	font-size: 20rpx;
	color: #ff3333;
	background-color: #fff2f2;
	border-radius: 4rpx;
	font-weight: normal;
	margin-right: 12rpx;
	padding: 4rpx 12rpx;
}
.cncard .time {
	font-size: 20rpx;
	color: #999;
}
.cncard .issue {
	margin-top: 10rpx;
}
.cncard .handle {
	display: flex;
	justify-content: space-between;
	align-items: flex-end;
}
.cncard .btn {
	background: linear-gradient(180deg, #ff7800 0%, #ff4b33 100%);
	width: 120rpx;
	height: 56rpx;
	line-height: 56rpx;
	color: #fff;
	text-align: center;
	border-radius: 56rpx;
}
/* ----------------------------复制商品列表的css---------------------------------- */
.goods_list {
	width: 94%;
	margin: 0 auto;
	padding: 30rpx 0;
}
.goods_list .goods_item {
	background: #ffffff;
	display: flex;
	border-radius: 10px;
	padding: 20rpx;
	box-sizing: border-box;
	margin-bottom: 20rpx;
}
.goods_list .goods_item .goods_cover {
	width: 22vw;
	height: 22vw;
	display: block;
	margin-right: 20rpx;
	position: relative;
}
.goods_list .goods_item .goods_cover image {
	width: 100%;
	height: 100%;
	border-radius: 5px;
}
.goods_list .goods_item .goods_cover .countdown {
	position: absolute;
	bottom: 0;
	left: 0;
	width: 100%;
	background: rgba(255, 51, 51, 0.8);
	color: #ffffff;
	text-align: center;
	height: 36rpx;
	font-size: 24rpx;
	border-radius: 0 0 5px 5px;
}
.goods_list .goods_item .goods_info {
	width: calc(72vw - 60rpx);
	position: relative;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
}
.goods_list .goods_item .goods_info .goods_title {
	display: block;
	width: 100%;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
	font-size: 30rpx;
	font-weight: bold;
}
.goods_list .goods_item .goods_info .inventory .countrymen {
	display: inline-block;
	background: linear-gradient(to bottom, #ff843e, #ff4848);
	color: #ffffff;
	font-size: 20rpx;
	padding: 4rpx 20rpx;
	margin-right: 20rpx;
	margin-top: 10rpx;
	border-radius: 10rpx;
}
.goods_list .goods_item .goods_info .inventory .group {
	display: inline-block;
	background: #fff2e6;
	color: #ff7800;
	font-size: 20rpx;
	padding: 4rpx 20rpx;
	margin-right: 20rpx;
}
.goods_list .goods_item .goods_info .inventory .seckill {
	display: inline-block;
	background: #fff2f2;
	color: #ff3333;
	font-size: 20rpx;
	padding: 4rpx 20rpx;
	margin-right: 20rpx;
}
.goods_list .goods_item .goods_info .inventory .inventory_num {
	font-size: 24rpx;
	color: #aaaaaa;
}
.goods_list .goods_item .goods_info .buy_btn {
	width: 160rpx;
	height: 56rpx;
	background-color: #3994ff;
	color: #ffffff;
	border-radius: 50px;
	display: block;
	position: absolute;
	bottom: 0;
	right: 0;
	font-size: 28rpx;
	line-height: 56rpx;
	padding: 0em;
}
.goods_list .goods_item .goods_info .btn {
	height: 56rpx;
	display: block;
	position: absolute;
	bottom: 0;
	right: 0;
}
.goods_list .goods_item .goods_info .price .new {
	font-size: 40rpx;
	color: #ff7800;
	font-weight: bold;
}
.goods_list .goods_item .goods_info .price .new.seckill {
	color: #ff6040;
}
.goods_list .goods_item .goods_info .price .old {
	font-size: 20rpx;
	color: #aaaaaa;
	text-decoration-line: line-through;
	margin-left: 6rpx;
}

.bottom_btn_box {
	width: 750rpx;
	height: 138rpx;
	opacity: 1;
	background: #ffffff;
	position: fixed;
  bottom: 0;
  display: flex;
  flex-wrap:wrap;
  justify-content: center;
	border-top: 1px solid rgba(102, 102, 102, 0.192);
}
.bottom_btn_box .text {
	opacity: 1;
	border: 1px solid rgba(0, 0, 0, 0);
	font-size: 24rpx;
	font-weight: 400;
	text-align: center;
	color: #999999;
	line-height: 35rpx;
}

.bottom_btn_box .btn {
	width: 480rpx;
	height: 76rpx;
	opacity: 1;
	background: #3994ff;
	border-radius: 35rpx;
	opacity: 1;
	font-size: 32rpx;
	font-weight: 400;
	color: #ffffff;
  line-height: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}


.van-count-down {
	font-size: 26rpx !important;
	color: #fff !important;
	line-height: 36rpx !important;
}