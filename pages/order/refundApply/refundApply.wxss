/* 订单进度 */
.progress {
	background-color: #fff2f2;
	color: #ff3333;
	text-align: center;
	font-size: 24rpx;
	border-radius: 20rpx;
	padding: 24rpx 0;
	margin-bottom: 20rpx;
}
.progress2 {
	background-color: #fff2e6;
	color: #ff7800;
}
.progress3 {
	background-color: #f2f8ff;
	color: #3994ff;
}
.progress4 {
	background-color: #fff2e6;
	color: #ff7800;
}
.progress .mydown {
	display: flex;
	justify-content: center;
	align-items: center;
}
.progress .van-count-down {
	color: #ff3333;
	font-size: 24rpx;
}
/* 列表css */
.orcard {
	background-color: #fff;
	border-radius: 20rpx;
	margin-bottom: 26rpx;
}
.orcard .shop {
	display: flex;
	justify-content: space-between;
	align-items: center;
	height: 80rpx;
	padding: 0 24rpx;
	border-bottom: 1px solid #f1f1f1;
	font-size: 24rpx;
}
.orcard .shop > .house {
	font-weight: bold;
	display: flex;
	align-items: center;
	width: 410rpx;
}
.orcard .shname {
	width: calc(100% - 50rpx);
	white-space: nowrap;
	text-overflow: ellipsis;
	overflow: hidden;
}
.orcard .shopimg {
	width: 40rpx;
	height: 40rpx;
	border-radius: 50%;
	margin-right: 10rpx;
}
.orcard .goshop {
	color: #999999;
	font-size: 20rpx;
	display: flex;
	align-items: center;
}
.orcard .cover {
	border: 1rpx solid #66666623;

	width: 120rpx;
	height: 120rpx;
	border-radius: 12rpx;
}
.orcard .goods {
	display: flex;
	align-items: center;
	padding: 22rpx 24rpx;
}
.orcard .goinfo {
	padding-left: 20rpx;
	width: calc(100% - 120rpx);
	box-sizing: border-box;
}
.orcard .gotit {
	display: flex;
	justify-content: space-between;
}
.orcard .gotit > text {
	font-size: 18rpx;
	border-radius: 10rpx;
	word-break: keep-all;
	line-height: 36rpx;
	padding: 0rpx 8rpx;
	background-color: green;
}
.orcard .gotit .logistics {
	background-color: #fff2f2;
	color: #ff3333;
}
.orcard .gotit .local {
	color: #ff7800;

	background-color: #fff2e6;
}
.orcard .gotit > view {
	font-weight: bold;
	white-space: nowrap;
	text-overflow: ellipsis;
	overflow: hidden;
}
.orcard .gospec {
	font-size: 20rpx;
	color: #aaaaaa;
	white-space: nowrap;
	text-overflow: ellipsis;
	overflow: hidden;
}
.orcard .count {
	display: flex;
	justify-content: space-between;
	align-items: center;
	margin-top: 10rpx;
}
.orcard .goprice {
	color: #ff7800;
	font-size: 32rpx;
	font-weight: bold;
}
.orcard .freight {
	margin: 0 15rpx;
	font-size: 20rpx;
	color: #aaaaaa;
}
.orcard .bag {
	font-size: 20rpx;
	color: #fff;
	background-color: #ff6040;
	border-radius: 6rpx;
	padding: 2rpx 10rpx;
	margin-left: 10rpx;
	position: relative;
	bottom: 4rpx;
}
.orcard .gonum {
	font-size: 24rpx;
	color: #aaa;
}
.orcard .handle {
	display: flex;
	align-items: center;
	justify-content: space-between;
	padding: 24rpx 24rpx;
	border-top: 1px solid #f1f1f1;
	font-size: 24rpx;
}
.orcard .total {
	font-weight: bold;
}
.orcard .money {
	font-size: 32rpx;
	color: #ff7800;
	margin-left: 16rpx;
}
.orcard .orbtn {
	display: flex;
}
.orcard .btn1 {
	width: 144rpx;
	height: 52rpx;
	line-height: 52rpx;
	border-radius: 52rpx;
	text-align: center;
	border: 1px solid #666666;
	font-size: 22rpx;
	margin-left: 20rpx;
	font-weight: bold;
}
.orcard .btn2 {
	color: #ff6040;
	border-color: #ff6040;
}
.orcard .btn3 {
	color: #3994ff;
	border-color: #3994ff;
}

