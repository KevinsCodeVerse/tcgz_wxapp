/* pages/merchent/advertising/advertising.wxss */.box {
  padding: 30rpx;
}
.box .main_box {
  background: #ffffff;
  height: 260rpx;
  border-radius: 10px;
  background-color: #ffffff;
  border-radius: 20rpx;
  display: flex;
  margin-bottom: 30rpx;
}
.box .main_box .img_box {
  min-width: 260rpx;
  min-height: 260rpx;
  position: relative;
}
.box .main_box .img_box .time_box {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 70rpx;
  background: #00000083;
  border-radius: 0px 0px 20rpx 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.box .main_box .img_box .time_box view {
  text-align: center;
  opacity: 1;
  font-size: 20rpx;
  font-weight: 400;
  color: #ffffff;
  line-height: 30rpx;
}
.box .main_box image {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}
.box .main_box .text_box {
  margin-left: 20rpx;
  position: relative;
  width: 100%;
}
.box .main_box .text_box .title {
  font-size: 28rpx;
  font-weight: 700;
  margin: 15rpx 0;
}
.box .main_box .text_box .title .parice {
  margin-left: 20rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #ff3333;
}
.box .main_box .text_box .text {
  padding-right: 15rpx;
  font-size: 22rpx;
  font-weight: 400;
  color: #888888;
  line-height: 30rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
}
.box .main_box .text_box .btn_box {
  position: absolute;
  right: 0;
  bottom: 0;
  display: flex;
  margin: 20rpx 10rpx;
}
.box .main_box .text_box .parice{
  position: absolute;
  left: 0rpx;
  bottom: 20rpx;
  font-size: 30rpx;
  font-weight: 400;
  color: #ff3333;
}
.box .main_box .text_box .btn_box view {
  line-height: 50rpx;
  text-align: center;
  margin-right: 15rpx;
}
.box .main_box .text_box .btn_box .btn_detail {
  width: 100rpx;
  height: 50rpx;
  background: #ffffff;
  border: 2rpx solid #3994ff;
  border-radius: 26rpx;
  font-size: 24rpx;
  font-weight: 700;
  color: #3994ff;
}
.box .main_box .text_box .btn_box .btn_open {
  width: 150rpx;
  height: 50rpx;
  background: #3994ff;
  border-radius: 26rpx;
  font-size: 24rpx;
  font-weight: 700;
  color: #ffffff;
}
.box .main_box .text_box .btn_box .btn_open2 {
  width: 150rpx;
  height: 50rpx;
  background: #CCCCCC;
  border-radius: 26rpx;
  font-size: 24rpx;
  font-weight: 700;
  color: #ffffff;
}
