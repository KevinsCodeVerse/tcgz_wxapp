/* pages/merchent/login/login.wxss */
.login{
  background-color: #fff;
  min-height: 100vh;
}
.loginbg{
  width: 100%;
  height: 425rpx;
}
.handle{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 60rpx;
}
.btn{
  display: flex;
  align-items: center;
  justify-content: center;
  height: 86rpx;
  width: 82%;
  color: #fff;
  background-color: #3994FF;
  font-size: 32rpx;
  border-radius: 84rpx;
  margin-top: 50rpx;
}
.handle .protocol{
  display: flex;
  color: #FFF59A;
  font-size: 24rpx;
}
.handle text{
  color: #fff;
}
/* 输入框 */
.myinput{
  width: 76%;
  height: 86rpx;
  border-radius: 86rpx;
  margin: 0 12%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-left: 44rpx;
  margin-bottom: 30rpx;
  background-color: #F5F5F5;
}
.myinput text{
  color: #FFF59A;
  padding-right: 44rpx;
}
.pholder{
  color: #999999;
}
.imgcode {
  width: 140rpx;
  height: 60rpx;
  padding-right: 44rpx;
}
.imgcode image {
  width: 100%;
  height: 100%;
}
.mylink{
  color: #3994FF;
  padding: 30rpx;
  text-align: center;
  font-size: 24rpx;
}