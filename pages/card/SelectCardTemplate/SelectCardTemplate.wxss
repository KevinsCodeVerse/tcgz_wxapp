.page {
  padding: 20rpx 10rpx;
  height: 90vh;
  overflow: hidden;
  font-family: PingFang SC, PingFang SC-Bold;
}
.foot{
  height: 10vh;
  overflow: hidden;
  margin: 10rpx 0;
  padding: 10rpx 0 30rpx 10rpx;
  position: fixed;
	left: 0;
	right: 0;
	bottom: 0;
	height: 100rpx;
	background-color: #fff;
	z-index: 99;
	border-top: 1px solid #ddd;
}
.card {
  width: 670rpx;
  height: 340rpx;
  padding: 32rpx 40rpx;
  border-radius: 8px;
  box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.3);
  box-sizing: border-box;
  margin: 0 auto;
}
.top {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}
.name {
  font-size: 38rpx;
  font-weight: 700;
  margin-bottom: 10rpx;
}
.pos {
  font-size: 22rpx;
  font-weight: 400;
  margin: 15rpx 0;
}
.right image {
  width: 128rpx;
  height: 128rpx;
  border: 2px solid rgba(255, 255, 255, 0.5);
  border-radius: 68rpx;
}
.card view {
  text-align: left;
  color: #ffffff;
}
.card view text {
  text-align: left;
  color: #ffffff;
  font-size: 26rpx;
  font-weight: 400;
}
.icon {
  width: 24rpx;
  height: 24rpx;
  margin: -5rpx 12rpx -2rpx 0;
}
.box {
  margin: 30rpx auto;
  overflow: hidden;
  width: 670rpx;
  height: 70vh;
  background: #f2f2f5;
}
.box-bgc{
  width: 670rpx;
  height: 800rpx;
  overflow-y: auto;
  display: flex;
  flex-wrap: wrap; 
  justify-content: flex-start; 
}
.box text {
  font-size: 32rpx;
  font-weight: 700;
  text-align: left;
  color: #333333;
}
.box .bgc {
  width: 195rpx;
  height: 98rpx;
  border-radius: 12rpx;
}
.image-box{
  position: relative;
  width: 202rpx;
  height: 102rpx;
  border-radius: 16rpx;
  margin: 10rpx 7rpx;
}
.box-bgc view{
  width: 202rpx;
  height: 102rpx;
  border-radius: 20rpx;
}
.check-icon {
  position: absolute;
  right: 0;
  bottom: 0;
  width: 40rpx;
  height: 40rpx;
}
.box-bgc {
  margin: 15rpx 0;
}
