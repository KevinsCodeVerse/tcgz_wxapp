/* 推荐店铺 */
.store .content_store_title {
  font-size: 28rpx;
  font-weight: bold;
  margin-top: 20rpx;
}
.store .store_item {
  display: flex;
  border-radius: 5px;
  box-shadow: 0 0 3px rgba(0,0,0,0.1);
  padding: 20rpx;
  box-sizing: border-box;
  position: relative;
  margin-top: 20rpx;
  margin-bottom: 30rpx;
}
.store .store_item .cover {
  width: 140rpx;
  height: 140rpx;
  border-radius: 5px;
  margin-right: 20rpx;
}
.store .store_item .store_info {
  height: 140rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 10rpx 0;
  box-sizing: border-box;
}
.store .store_item .store_info .store_name {
  font-size: 28rpx;
  font-weight: bold;
}
.store .store_item .store_info .other_info text {
  font-size: 24rpx;
  color: #999999;
  margin-right: 20rpx;
}
.store .collection {
  position: absolute;
  right: 20rpx;
  top: 0;
  bottom: 0;
  display: flex;
  align-items: center;
}
.recommend,.comments {
  margin-top: 20rpx;
}
/* 相关推荐 */
.store_show {
  position: fixed;
  bottom: 160rpx;
  right: 20rpx;
  background-color: #0079FE;
  color: #ffffff;
  border-radius: 50px;
  padding: 10rpx 20rpx;
  font-size: 28rpx;
}
.store_title {
