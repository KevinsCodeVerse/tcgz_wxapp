/* pages/focus/videoDetail/videoDetail.wxss */
.video_detail {
    background-color: #ffffff;
    padding-top: 420rpx;
    position: relative;
}
.video_detail video {
    width: 100%;
    height: 420rpx;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 1000;
}
.video_detail .info {
    padding: 30rpx 40rpx;
    box-sizing: border-box;
}
.video_detail .info .title {
    font-size: 32rpx;
    line-height: 1.8;
    font-weight: bold;
    color: #333333;
    margin-bottom: 10rpx;
    padding: 0;
    word-break: break-all;
}
.video_detail .info .author .text {
    font-size: 24rpx;
    color: #999999;
    margin-right: 20rpx;
    max-width: 400rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    text-overflow: ellipsis;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
}
.video_detail .info .author {
    display: flex;
}
.video_detail .info .data {
    display: flex;
    justify-content: space-around;
    padding: 40rpx 20rpx;
    padding-bottom: 10rpx;
    box-sizing: border-box;
    margin-bottom: 16rpx;
}
.video_detail .info .data .data_item {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.video_detail .info .data .data_item image {
    width: 36rpx;
    height: 36rpx;
}
.video_detail .info .data .data_item text {
    font-size: 28rpx;
    margin-top: 10rpx;
}
.title {
    font-size: 32rpx;
    color: #333333;
    font-weight: bold;
    padding: 0 30rpx;
    box-sizing: border-box;
}
.comments {
    padding: 30rpx 0;
}

.duce {
    /* padding: 20rpx; */
    margin-top: 30rpx;
    margin-bottom: 20rpx;
}
.duce_title {
    font-weight: 600;
}
.duce .duce_text_1 {
    font-weight: 400;
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 4;
    color: #666;
}
.duce .duce_text_2 {
    font-weight: 400;
    color: #666;
}

.duce .duce_btn {
    color: rgba(57, 149, 255, 0.603);
}





.news_detail .content {
  padding: 30rpx 0;
}
rich-text {
  word-break: break-all;
