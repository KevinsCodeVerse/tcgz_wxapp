.focus {
  background: #ffffff;
  position: relative;
}
.news{
  background: rgb(241, 241, 241);

}
.focus_bgd {
  position: absolute;
  width: 100%;
  height: 280rpx;
  background-color: #3994FF;
  left: 0;
  border-radius: 0 0 50% 50%;
}
.navbar {
  display: flex;
  align-items: center;
  padding-left: 20rpx;
  font-size: 28rpx;
  color: #ffffff;
}
.navbar .addr {
  height: 30rpx;
}
.navbar .arrow {
  height: 8rpx;
  margin-left: 10rpx;
}
.navbar text {
  margin-left: 10rpx;
  display: block;
  max-width: 50%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
/* 轮播图 */
.banner {
  position: relative;
  width: 94%;
  margin: 0 auto;
  margin-top: 20rpx;
}
swiper {
  width: 100%;
  height: 320rpx;
  /* border-radius: 10px;
  overflow: hidden; */
}
swiper image {
  width: 100%;
  height: 100%;
  display: block;
  border-radius: 10px;
}
.banner .people_num {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  position: absolute;
  bottom: 0;
  right: 0;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #ffffff;
  background: linear-gradient(to top,rgba(0,0,0,0.5),rgba(0,0,0,0));
  border-radius: 0 0 10px 10px;
}
.banner .people_num image {
  transform: rotateZ(-90deg);
  width: 20rpx;
  height: 14rpx;
  margin-left: 10rpx;
}
.menu {
  display: flex;
  padding: 0 30rpx;
  box-sizing: border-box;
  background-color: #ffffff;
}
.menu .menu_item {
  width: 20%;
  padding: 30rpx 0;
  text-align: center;
  font-size: 24rpx;
  color: #666666;
}
.menu .menu_item image {
  width: 80rpx;
  height: 80rpx;
  display: block;
  margin: 0 auto;
  margin-bottom: 10rpx;
}