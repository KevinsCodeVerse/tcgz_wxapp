/* pages/my/coupon/coupon.wxss */
.coupon{
  background-color: #E10310;
  min-height: 100vh;
}
.couponimg{
  width: 100%;
  height: 680rpx;
}
.no_coupon{
  margin: 0 30rpx;
  background-color: #fff;
  text-align: center;
  position: relative;
  top: -210rpx;
  border-radius: 20rpx;
}
.no_coupon image{
  width: 300rpx;
  height: 332rpx;
  padding-top: 80rpx;
  padding-bottom: 88rpx;
}

/* 列表css */
.cnlist{
  position: relative;
  top: -210rpx;
}
.cncard{
  background-color: #fff;
  border-radius: 20rpx;
  margin: 0 30rpx 20rpx 30rpx;
  padding: 26rpx;
  display: flex;
  align-items: center;
}
.cncard .price{
  background-color: #FFF4F2;
  color: #FF0000;
  width: 140rpx;
  height: 140rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 70rpx;
  font-weight: bold;
  border-radius: 12rpx;
}
.cncard .cninfo{
  width: calc(100% - 140rpx);
  height: 140rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding-left: 20rpx;
  box-sizing: border-box;
}
.cncard .money{
  font-weight: bold;
  display: flex;
  align-items: center;
}
.cncard .meet{
  font-size: 20rpx;
  color: #FF3333;
  background-color: #FFF2F2;
  border-radius: 4rpx;
  font-weight: normal;
  margin-left: 20rpx;
  padding: 4rpx 12rpx;
}
.cncard .time{
  font-size: 20rpx;
  color: #999;
}
.cncard .handle{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.cncard .cnremark{
  font-size: 18rpx;
  color: #FF3333;
  background-color: #FFF2F2;
  border-radius: 12rpx;
  padding: 5rpx 10rpx;
  margin-right: 10rpx;
}
.cncard .attr{
  display: flex;
  align-items: center;
}
.cncard .btn{
  background: linear-gradient(180deg, #FF7800 0%, #FF4B33 100%);
  width: 120rpx;
  height: 56rpx;
  line-height: 56rpx;
  color: #fff;
  text-align: center;
  border-radius: 56rpx;
}