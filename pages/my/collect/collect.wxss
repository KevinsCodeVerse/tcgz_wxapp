/* pages/my/collect/collect.wxss */
.collect{
  padding-top: 78rpx;
}
.tabs{
  color: #666666;
  display: flex;
  justify-content: space-around;
  padding: 0 20rpx;
  background-color: #fff;
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  z-index: 100;
}
.tabs .active{
  color: #3994FF;
  font-weight: bold;
}
.tabs>text{
  height: 78rpx;
  line-height: 78rpx;
}
/* 列表 */
.goods_list {
  width: 94%;
  margin: 20rpx auto;
}
.goods_list .goods_item {
  background: #ffffff;
  display: flex;
  border-radius: 10px;
  padding: 20rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}
.goods_list .goods_item .goods_cover {
  width: 22vw;
  height: 22vw;
  display: block;
  margin-right: 20rpx;
  position: relative;
}
.goods_list .goods_item .goods_cover image {
  width: 100%;
  height: 100%;
  border-radius: 5px;
}
.goods_list .goods_item .goods_cover .countdown {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background: rgba(255,51,51,0.8);
  color: #ffffff;
  text-align: center;
  font-size: 24rpx;
  border-radius: 0 0 5px 5px;
}
.goods_list .goods_item .goods_info {
  width: calc(72vw - 60rpx);
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.goods_list .goods_item .goods_info .goods_title {
  display: block;
  width: 100%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 30rpx;
  font-weight: bold;
}
.goods_list .goods_item .goods_info .inventory .countrymen {
  display: inline-block;
  background: linear-gradient(to bottom,#FF843E,#FF4848);
  color: #ffffff;
  font-size: 20rpx;
  padding: 4rpx 20rpx;
  margin-right: 20rpx;
  border-radius: 2px;
}
.goods_list .goods_item .goods_info .inventory .group {
  display: inline-block;
  background: #FFF2E6;
  color: #FF7800;
  font-size: 20rpx;
  padding: 4rpx 20rpx;
  margin-right: 20rpx;
}
.goods_list .goods_item .goods_info .inventory .seckill {
  display: inline-block;
  background: #FFF2F2;
  color: #FF3333;
  font-size: 20rpx;
  padding: 4rpx 20rpx;
  margin-right: 20rpx;
}
.goods_list .goods_item .goods_info .inventory .inventory_num {
  font-size: 24rpx;
  color: #aaaaaa;
}
.goods_list .goods_item .goods_info .buy_btn {
  width: 160rpx;
  height: 56rpx;
  background-color: #3994FF;
  color: #ffffff;
  border-radius: 50px;
  display: block;
  position: absolute;
  bottom: 0;
  right: 0;
  font-size: 28rpx;
  line-height: 56rpx;
  padding: 0em;
}
.goods_list .goods_item .goods_info  .btn2{
  background-color: #f1f1f1;
}
.goods_list .goods_item .goods_info .btn {
  height: 56rpx;
  display: block;
  position: absolute;
  bottom: 0;
  right: 0;
}
.goods_list .goods_item .goods_info .price .new {
  font-size: 36rpx;
  color: #FF7800;
  font-weight: bold;
}
.goods_list .goods_item .goods_info .price .new.seckill {
  color: #FF6040;
}
.goods_list .goods_item .goods_info .price .old {
  font-size: 20rpx;
  color: #AAAAAA;
  text-decoration-line: line-through;
  margin-left: 6rpx;
}
/* 滑动加载 */
.loading {
  text-align: center;
  padding: 30rpx 0;
}
.finish {
  font-size: 28rpx;
  color: #999999;
  padding-bottom: 20rpx;
}


.van-count-down {
  font-size: 22rpx !important;
  line-height: 30rpx !important;
  color: rgba(255, 255, 255, 0.822) !important;
}