.topbox{
  position: fixed;
  z-index: 99;
  left: 0;
  right: 0;
  top: 0;
}
.filter {
	padding: 20rpx 20rpx 0 20rpx;
	box-sizing: border-box;
	position: fixed;
	left: 0;
	right: 0;
	top: 0;
	z-index: 99;
	background-color: #f7f7f7;
}
.filter_item {
	display: flex;
	align-items: center;
}
.filter_item .key {
	font-size: 26rpx;
}
.filter_item .options {
	background-color: #f5f5f5;
	padding: 15rpx 0;
	width: 100%;
	display: flex;
	align-items: center;
	flex-wrap: wrap;
}
.filter_item .options .options_item {
	display: flex;
	flex: 0 30%;
	height: 60rpx;
	align-items: center !important;
	justify-content: center;
	padding: 0rpx 0;
	margin: 6rpx 10rpx;
	text-align: center;
	font-size: 22rpx;
	background-color: #ffffff;
	border-radius: 3px;
	color: #666;
}

.filter_item .options view.active {
	border: 1rpx solid #3994ff;
	color: #3994ff;
	background: #f2f8ff;
}
.order {
	padding-top: 130rpx;
}
/* 列表 */
.hecard {
	background-color: #fff;
	margin: 0 30rpx 26rpx 30rpx;
	border-radius: 20rpx;
	font-size: 20rpx;
	padding: 20rpx 26rpx;

}
.hecard .heremark {
	display: flex;
	justify-content: space-between;
	align-items: center;
	font-size: 24rpx;
	/* border-bottom: 1px solid #f1f1f1; */
}
.hecard .heremark .image_box {
	width: 250rpx;
	display: flex;
	align-items: center;
}
.hecard .heremark .image_box image {
	margin-right: 15rpx;
	height: 50rpx;
	border-radius: 50%;
	min-width: 50rpx;
	max-width: 50rpx;
}
.hecard .retit {
	font-weight: bold;
	width: 250rpx;
	display: -webkit-box;
	overflow: hidden;
	text-overflow: ellipsis;
	word-break: break-all;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 1;
}
.hecard .status5 {
	color: #FF6040;
}
.hecard .status2 {
	color: #FF7800;
}
.hecard .status1 {
	color: #4098FF;
}
.hecard .status3 {
	color: #999999;
}
.hecard .hecon {
	display: flex;
	align-items: center;
	justify-content: space-between;
	padding: 16rpx 26rpx 18rpx 26rpx;
	color: #999999;
}
.hecard .account {
	font-weight: bold;
	font-size: 28rpx;
	color: #333;
}
.hecard .label {
	background-color: #f2f8ff;
	color: #3994ff;
	padding: 4rpx 10rpx;
	display: inline-block;
	margin-left: 20rpx;
}
.hecard .helef {
	width: calc(100% - 240rpx);
}
.hecard .herig {
	text-align: right;
}
.hecard .price {
	font-size: 44rpx;
	color: #ff7800;
	margin-bottom: 12rpx;
	word-break: keep-all;
}

.hecard .reason {
	color: #ff3333;
	font-size: 24rpx;
	margin: 4rpx 26rpx;
	padding: 14rpx 0;
	border-top: 1px solid #f1f1f1;
}
/* 滑动加载 */
.loading {
	text-align: center;
	padding: 30rpx 0;
}
.finish {
	font-size: 28rpx;
	color: #999999;
	padding-bottom: 20rpx;
}

.name_box .image_box image{
	width: 120rpx;
	height: 120rpx;
	border-radius: 10rpx;
	margin: 0 15rpx 0 0;
}
.name_box .shopInfo{
	flex: 1;
	padding-right: 15rpx;
}
.name_box .shopInfo .shopName{
font-weight: 700;
color: #333333;
margin-bottom: 15rpx;
display: -webkit-box;
overflow: hidden;
text-overflow: ellipsis;
word-break: break-all;
-webkit-box-orient: vertical;
-webkit-line-clamp: 1;
}
.name_box .shopInfo .shopTiele{
font-weight: 400;
color: #333333;
display: -webkit-box;
overflow: hidden;
text-overflow: ellipsis;
word-break: break-all;
-webkit-box-orient: vertical;
-webkit-line-clamp: 2;
}
.name_box {
	display: flex;
	font-size: 28rpx;
	margin: 15rpx 0;
}
.name_box .name{
	flex: 1;
	display: -webkit-box;
	overflow: hidden;
	text-overflow: ellipsis;
	word-break: break-all;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 1;
}

.priceInfo{
	display: flex;
}
.price_box .text,.price_box .price{
	text-align: left !important;
}

.price_box{
	width:190rpx;
}
.priceInfo view .text{
	font-size: 28rpx;
	text-align: center;
}
.priceInfo view .price{
	font-size: 28rpx;
	text-align: center;

	margin: 0;
}
.bili{
	width: 160rpx;

}
.deduct{
	width: 220rpx;

}
.newtime{
	width: 220rpx;
	text-align: center;
}