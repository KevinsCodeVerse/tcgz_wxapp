/* pages/my/spread/gift_b/gift_b.wxss */
.gilist{
  padding-top: 1rpx;
  padding-bottom: 20rpx;
}
.gicard{
  background-color: #fff;
  display: flex;
  align-items: center;
  border-radius: 20rpx;
  margin: 20rpx;
  padding: 20rpx;
}
.gicard .avatar{
  width: 190rpx;
  height: 190rpx;
  display: block;
  border-radius: 10rpx;
}
.gicard .gicon{
  width: calc(100% - 190rpx);
  height: 190rpx;
  padding-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.gicard .gitit{
  font-weight: bold;
  overflow:hidden;
  text-overflow: ellipsis;
  display:-webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient:vertical;
}
.gicard .giprice{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.gicard .btn{
  background-color: #3994FF;
  color: #fff;
  font-weight: bold;
  width: 160rpx;
  height: 56rpx;
  line-height: 56rpx;
  border-radius: 56rpx;
  text-align: center;
}
.gicard .giprice text{
  color: #FF7800;
  font-size: 40rpx;
}
/* 滑动加载 */
.loading {
  text-align: center;
  padding: 30rpx 0;
}
.finish {
  font-size: 28rpx;
  color: #999999;
  padding-bottom: 20rpx;
}