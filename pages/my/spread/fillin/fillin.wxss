/* pages/my/spread/fillin/fillin.wxss */
.fillin{
  box-sizing: border-box;
  padding-top: 40rpx;
}
.fillbg{
  background-color: #3994FF;
  height: 300rpx;
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  z-index: -1;
}
.step{
  text-align: center;
}
.step image{
  height: 106rpx;
  width: 632rpx;
}
.form{
  background-color: #fff;
  border-radius: 20rpx;
  margin: 30rpx 20rpx 20rpx 20rpx;
  padding-bottom: 2rpx;
}
.form .foremark{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  font-size: 24rpx;
  border-bottom: 1px solid #EEE;
}
/* 输入框 */
.myinput{
  display: flex;
  align-items: center;
  border-bottom: 1px solid #eee;
  padding: 28rpx 0;
  font-size: 30rpx;
  margin: 0 30rpx;
}
.myinput .labl{
  width: 180rpx;
}
.myinput input{
  width: calc(100% - 180rpx - 40rpx);
  color: #666;
}
.myinput .joimg{
  width: 60rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  height: 48rpx;
}
.mytextarea{
  align-items: flex-start;
}
.mytextarea textarea{
  width: calc(100% - 180rpx - 40rpx);
  color: #000;
  height: 100rpx;
}
.myinput image{
  width: 34rpx;
  height: 34rpx;
  text-align: right;
  display: block;
}
.nobor{
  border-bottom: none;
}
/* 按钮 */
.fillbtn{
  background-color: #3994FF;
  color: #fff;
  margin: 30rpx 14%;
  height: 76rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 76rpx;
  font-size: 32rpx;
}
.fillbtn2{
  background-color: #fff;
  color: #3994FF;
  font-size: 28rpx;
  height: 60rpx;
}
/* 弹框 */
.vanpop{
  width: 580rpx;
}
.vanpop .vacard{
  padding: 10rpx 30rpx 10rpx 60rpx;
}
.vanpop .attr{
  padding: 34rpx 0;
}
.vanpop .vabtn{
  background-color: #3994FF;
  color: #fff;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
}
