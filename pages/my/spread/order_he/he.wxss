.filter {
  padding: 20rpx 20rpx 0 20rpx;
  box-sizing: border-box;
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  z-index: 99;
  background-color: #f7f7f7;
}
.filter_item {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}
.filter_item .key {
  font-size: 26rpx;
}
.filter_item .options {
  display: flex;
  align-items: center;
}
.filter_item .options .options_item {
  padding: 10rpx 0;
  width: 130rpx;
  text-align: center;
  font-size: 22rpx;
  background-color: #ffffff;
  border-radius: 3px;
  margin-left: 16rpx;
  box-sizing: border-box;
  color: #666;
}
.filter_item .options .options_item:first-child{
  margin-left: 0;
}
.filter_item .options text.active {
  border: 1rpx solid #3994FF;
  color: #3994FF;
  background: #F2F8FF;
}
.order{
  padding-top: 170rpx;
}
/* 列表 */
.hecard{
  background-color: #fff;
  margin: 0 30rpx 26rpx 30rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
}
.hecard .heremark{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  padding: 20rpx 26rpx;
  border-bottom: 1px solid #f1f1f1;
}
.hecard .retit{
  font-weight: bold;
}
.hecard .status1{
  color: #FF6040;
}
.hecard .status2{
  color: #86CC14;
}
.hecard .status3{
  color: #999999;
}
.hecard .hecon{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 26rpx 18rpx 26rpx;
  color: #999999;
}
.hecard .account{
  font-weight: bold;
  font-size: 28rpx;
  color: #333;
}
.hecard .label{
  background-color: #F2F8FF;
  color: #3994FF;
  padding: 4rpx 10rpx;
  display: inline-block;
  margin-left: 20rpx;
}
.hecard .helef{
  width: calc(100% - 240rpx);
}
.hecard .herig{
  text-align: right;
}
.hecard .price{
  font-size: 44rpx;
  color: #FF7800;
  margin-bottom: 12rpx;
}
.hecard .reason{
  color: #FF3333;
  font-size: 24rpx;
  margin: 4rpx 26rpx;
  padding: 14rpx 0;
  border-top: 1px solid #f1f1f1;
}
/* 滑动加载 */
.loading {
  text-align: center;
  padding: 30rpx 0;
}
.finish {
  font-size: 28rpx;
  color: #999999;
  padding-bottom: 20rpx;
}