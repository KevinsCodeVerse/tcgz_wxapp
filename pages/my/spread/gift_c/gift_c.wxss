/* pages/my/spread/gift_c/gift_c.wxss */
.gift{
  background-color: #3E0C71;
  padding-bottom: 180rpx;
}
.gift .giftbg{
  width: 100%;
  height: 100vh;
  display: block;
}
.gift .btn{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 70rpx;
  height: 100rpx;
  width: 80%;
  margin: 0 10%;
  background: linear-gradient(180deg, #FDF3DB 0%, #DFB584 100%);
  border-radius: 100rpx;
  color: #7F4C33;
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  line-height: 100rpx;
  z-index: 100;
  box-shadow: 0px 16rpx 20rpx #3E0C71;
}