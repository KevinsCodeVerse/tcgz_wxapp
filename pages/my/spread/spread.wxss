/* pages/my/spread/spread.wxss */
.prompt {
  background-color: #3994FF;
  color: #ffffff;
  font-size: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 50rpx 100rpx 50rpx;
}
.prompt text {
  display: block;
  margin-bottom: 10rpx;
}
.prompt .mybtn{
  border: 1px solid #fff;
  font-size: 24rpx;
  width: 170rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 60rpx;
} 
.user_info {
  width: 94%;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #ffffff;
  border-radius: 10px;
  height: 160rpx;
  margin-top: -80rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.user_info .info {
  display: flex;
  align-items: center;
}
.user_info .info .avatar {
  width: 100rpx;
  height: 100rpx;
  display: block;
  border-radius: 50%;
  margin-right: 20rpx;
}
.user_info .info .name {
  font-size: 30rpx;
  margin-bottom: 10rpx;
  max-width: 180rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.user_info .nick{
  display: flex;
  align-items: center;
}
.user_info .nick image{
  height: 32rpx;
  margin-left: 20rpx;
}
.user_info .info .invitation {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999999;
}
.user_info .info .invitation button {
  margin: 0;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 22rpx;
  border-radius: 50px;
  background-color: transparent;
  border: 1rpx solid #3994FF;
  color: #3994FF;
  margin-left: 10rpx;
}
.user_info .bind {
  margin: 0;
  background-color: transparent;
  border: 1rpx solid #3994FF;
  color: #3994FF;
  font-size: 24rpx;
  border-radius: 50px;
}
.wallet {
  width: 94%;
  margin: 0 auto;
  background: linear-gradient(to right,#3994FF,#4D64FF);
  color: #ffffff;
  padding: 20rpx;
  padding-right: 0;
  margin-top: 20rpx;
  box-sizing: border-box;
  border-radius: 10px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.wallet .wallet_left text {
  display: block;
}
.wallet .wallet_left .key {
  font-size: 28rpx;
}
.wallet .wallet_left .value {
  font-size: 60rpx;
  font-weight: bold;
}
.wallet .wallet_right text {
  display: block;
  border-radius: 50px 0 0 50px;
  background: #FFE600;
  color: #4D6AFF;
  padding: 6rpx 20rpx 6rpx 30rpx;
  font-size: 24rpx;
}
.wallet .wallet_right text:first-child {
  margin-bottom: 20rpx;
}

.plan {
  width: 94%;
  margin: 0 auto;
  border-radius: 10px;
  background: #ffffff;
  margin-top: 20rpx;
}
.plan .plan_title {
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #eeeeee;
  font-size: 28rpx;
}
.plan .plan_title .href {
  color: #3994FF;
}
.plan .plan_list {
  display: flex;
  padding: 30rpx;
}
.plan .plan_list .list_item {
  width: 50%;
  
}
.plan .plan_list .list_item text {
  display: block;
  text-align: center;
}
.plan .plan_list .list_item .value {
  font-size: 36rpx;
  color: #333333;
}
.plan .plan_list .list_item .key {
  color: #999999;
  font-size: 24rpx;
}
/* 导航 */
.nav_list {
  width: 94%;
  margin: 0 auto;
  margin-top: 20rpx;
  background-color: #ffffff;
  border-radius: 10px;
  padding: 30rpx;
  box-sizing: border-box;
  display: flex;
}
.nav_item {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.nav_item image {
  width: 50rpx;
  margin-bottom: 10rpx;
}
.nav_item text {
  font-size: 24rpx;
  color: #999999;
}

.invite_input {
  display: block;
  padding-left: 30rpx;
  box-sizing: border-box;
  height: 100rpx;
  font-size: 28rpx;
}
/* 成为业务员 */
.form_list {
  width: 80%;
  margin: 0 auto;
  padding-bottom: 10rpx;
}
.form_item {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  height: 80rpx;
}
.form_item .key {
  width: 110rpx;
}
.form_item input {
  font-size: 28rpx;
}

/* 通告 */
.notice {
  margin: 20rpx 20rpx 20rpx 20rpx;
  height: 44rpx;
  border-radius: 6rpx;
  color: #FF7800;
  font-size: 20rpx;
  background-color: #FFF2E6;
}
.notice swiper {
  height: 44rpx;
}
.notice swiper-item {
  display: flex;
  height: 44rpx;
  align-items: center;
  justify-content: space-around;
}
.notice .switem text{
  margin-right: 10rpx;
}

/* 推广等级 */
.level{
  background-color: #fff;
  border-radius: 20rpx;
  margin: 20rpx;
  font-size: 24rpx;
}
.level .letit{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 20rpx;
  border-bottom: 1px solid #f5f5f5;
}
.level .letit view{
  color: #3994FF;
}
.level .levcon{
  padding: 24rpx;
  color: #999;
}
.level .lename{
  display: flex;
  align-items: center;
  font-size: 28rpx;
  font-weight: bold;
  color: #000;
  margin-bottom: 10rpx;
}
.level image{
  height: 32rpx;
  margin-bottom: 5rpx;
}

.spread_box{
  margin: 20rpx;
  display: flex;
}
.spread_box image{
  width: 100%;
  height: 0;
} 