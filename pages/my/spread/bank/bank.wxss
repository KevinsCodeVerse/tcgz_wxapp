/* pages/my/spread/bank/bank.wxss */
.bank{
  background-color: #fff;
  min-height: 100vh;
}
.tip{
  background-color: #f2f8ff;
  color: #3994FF;
  text-align: center;
  font-size: 28rpx;
  padding: 18rpx 0;
  margin-bottom: 30rpx;
}
/* 输入框 */
.myinput{
  display: flex;
  align-items: center;
  border-bottom: 1px solid #eee;
  padding: 28rpx 0;
  font-size: 30rpx;
  margin: 0 58rpx;
}
.myinput .labl{
  width: 180rpx;
}
.myinput input{
  width: calc(100% - 180rpx - 40rpx);
  color: #666;
}
.myinput .joimg{
  width: 60rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  height: 48rpx;
}
.myinput image{
  width: 34rpx;
  height: 34rpx;
  text-align: right;
  display: block;
}
.handle{
  text-align: center;
}
.handle .btn{
  background-color: #3994FF;
  height: 76rpx;
  width: 480rpx;
  color: #fff;
  text-align: center;
  line-height: 76rpx;
  border-radius: 76rpx;
  display: inline-block;
  margin-top: 40rpx;
  font-size: 32rpx;
  letter-spacing: 2rpx;
}