/* pages/my/spread/fillin_flow/index.wxss */
.fillin_flow{
  padding: 26rpx 30rpx;
}
.flcard{
  background-color: #fff;
  border-radius: 20rpx;
  font-size: 24rpx;
  margin-bottom: 20rpx;
}
.flcard .flhead{
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #f1f1f1;
  padding: 0 26rpx;
  height: 67rpx;
  font-weight: bold;
}
.flcard .status1{
  color: #FF6040;
}
.flcard .status2{
  color: #86CC14;
}
.flcard .status3{
  color: #999999;
}
.flcard .d_card{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 24rpx;
}
.flcard .flleft{
  width: calc(100% - 150rpx);
  line-height: 34rpx;

}
.flcard .account{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.flcard .flremark{
  color: #999999;
  font-size: 20rpx;
}
.flcard .price{
  font-size: 20rpx;
  font-weight: bold;
}
.flcard .price text{
  color: #FF7800;
  font-weight: bold;
  font-size: 32rpx;
}
.flcard image{
  width: 100rpx;
  height: 100rpx;
  border: 1px solid #f1f1f1;
  border-radius: 10rpx;
}
.flcard .voucher{
  text-align: center;
  font-size: 16rpx;
  text-align: center;
  color: #999;
}
.flcard .reason{
  color: #FF3333;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 20rpx;
  border: 1px solid #f5f5f5;
  font-size: 24rpx;
}
.flcard .btn{
  color: #FF6040;
  border: 1px solid #FF6040;
  font-weight: bold;
  font-size: 22rpx;
  border-radius: 30rpx;
  width: 144rpx;
  height: 52rpx;
  text-align: center;
  line-height: 52rpx;
}
/* 滑动加载 */
.loading {
  text-align: center;
  padding: 30rpx 0;
}
.finish {
  font-size: 28rpx;
  color: #999999;
  padding-bottom: 20rpx;
}