/* pages/my/coupon_receive/index.wxss */
.conpon_my{
  padding-top: 78rpx;
}
.tabs{
  color: #666666;
  display: flex;
  justify-content: space-around;
  padding: 0 20rpx;
  background-color: #fff;
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  z-index: 100;
}
.tabs .active{
  color: #3994FF;
  font-weight: bold;
}
.tabs>text{
  height: 78rpx;
  line-height: 78rpx;
}
/* 列表css */
.cnlist{
  padding-top: 20rpx;
}
.cnlist .cnlcard{
  background-color: #fff;
  border-radius: 20rpx;
  margin: 0 30rpx 20rpx 30rpx;
}
.cnlist .shop{
  display: flex;
  align-items: center;
  font-size: 24rpx;
  border-bottom: 1px solid #f5f5f5;
  padding: 12rpx 26rpx;
}
.cnlist .shop image{
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}
.cncard{
  padding: 26rpx;
  display: flex;
  align-items: center;
}
.cncard .price{
  background-color: #FFF4F2;
  color: #FF0000;
  width: 140rpx;
  height: 140rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 70rpx;
  font-weight: bold;
  border-radius: 12rpx;
}
.cncard .cninfo{
  width: calc(100% - 140rpx);
  height: 140rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding-left: 20rpx;
  box-sizing: border-box;
}
.cncard .money{
  font-weight: bold;
  display: flex;
  align-items: center;
}
 .text {
  background-color: #fff2f2;
	padding: 2rpx 10rpx;
	border-radius: 5rpx;
	font-size: 24rpx;
	font-weight: 400;
	margin: 0 10rpx 0 0rpx;
	color: #ff3333;
}
.cncard .meet{
  font-size: 20rpx;
  color: #FF3333;
  background-color: #FFF2F2;
  border-radius: 4rpx;
  font-weight: normal;
  padding: 4rpx 12rpx;
}
.cncard .time{
  font-size: 20rpx;
  color: #999;
}
.cncard .handle{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.cncard .btn{
  border: 1px solid #FF6040;
  color: #FF6040;
  width: 144rpx;
  height: 52rpx;
  line-height: 52rpx;
  text-align: center;
  border-radius: 52rpx;
  font-size: 22rpx;
}
.overdue .price{
  background-color: #f5f5f5;
  color: #999999;
}
.overdue .meet{
  background-color: #f5f5f5;
  color: #999999;
}
.overdue .btn{
  border-color: #999;
  color: #999;
}

/* 滑动加载 */
.loading {
  text-align: center;
}
.loading_view {
  padding: 30rpx 0;
}
.finish {
  display: block;
  font-size: 28rpx;
  color: #999999;
  padding: 30rpx 0;
}
.floor {
  padding: 0 20rpx;
}
.textc_comment {
  float: right;
}

