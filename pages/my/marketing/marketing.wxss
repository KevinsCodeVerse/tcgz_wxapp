.city_news {
	padding-top: 190rpx;
	box-sizing: border-box;
}
.city_news .header {
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	z-index: 1000;
}
.search_btn {
	width: 120rpx;
	border-radius: 50px;
	background-color: #3994ff;
	color: #ffffff;
	text-align: center;
}

.goods_box {
	height: 200rpx;
	display: flex;
	margin: 20rpx;
	background-color: #fff;
	position: relative;
	border-radius: 20rpx;
}
.img {
	/* border:1rpx rgba(0, 0, 0, 0.067) solid; */
	/* box-shadow:2rpx 2rpx 5rpx #0000001c; */
	margin: 15rpx;
	min-width: 170rpx;
	min-height: 170rpx;
	margin-right: 20rpx;
	border-radius: 20rpx;
}
.img image {
	width: 170rpx;
	height: 170rpx;
	border-radius: 20rpx;
}

.tishi {
	margin: 40rpx 0 40rpx 0;
	text-align: center;
	font-size: 25rpx;
	color: #66666666;
}
.title {
	margin-top: 10rpx;
	padding-right: 15rpx;
	height: 80rpx;
	font-size: 28rpx;
	font-weight: 700;
	text-align: left;
	color: #333333;
	display: -webkit-box;
	overflow: hidden;
	text-overflow: ellipsis;
	word-break: break-all;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 2;
}
.price {
	margin-top: 15rpx;
	font-size: 28rpx;
	font-weight: 400;
	color: #888888;
	text-decoration: line;
}

.yongjin {
	color: #ff6040;
	font-size: 24rpx;
}
.yongjin text {
	font-size: 36rpx;
	font-weight: 800;
	color: #ff6040;
}
.btn {
	position: absolute;
	bottom: 10rpx;
	right: 0rpx;
	display: flex;
}
.shars {
	margin: 8rpx;
	margin-right: 15rpx;
	background: #3994ff;
    border-radius: 50rpx;
    padding: 6rpx 20rpx;
    line-height: 45rpx;
    color: #ffffff;
    font-weight: 700;
}
.detail {
    margin: 8rpx;
	background: #ffffff;
    border-radius: 50rpx;
    padding: 6rpx 20rpx;
    line-height: 45rpx;
    color: #3994ff;
    font-weight: 700;
    border: 1px solid #3994ff;
}
